<h1>Message ID: <%= message.id %></h1>

<p>Type: <%= message.type %></p>
<p>Body: <%= message.body %></p>
<p>Created at: <%= message.created_at %></p>
<p>Updated at: <%= message.updated_at %></p>

<h2>Handler Messages</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Attempts count</th>
      <th>Attempts max</th>
      <th>Attempts</th>
    </tr>
  </thead>
  <tbody>
    <% message.handler_messages.each do |handler_message| %>
      <tr>
        <td><%= handler_message.id %></td>
        <td><%= handler_message.status %></td>
        <td><%= handler_message.priority %></td>
        <td><%= handler_message.attempts_count %></td>
        <td><%= handler_message.attempts_max %></td>
        <td>
          <table>
            <thead>
              <tr>
                <th>Attempt ID</th>
                <th>Started at</th>
                <th>Ended at</th>
                <th>Successful</th>
                <th>Return value</th>
                <th>Error class name</th>
                <th>Error message</th>
                <th>Error backtrace</th>
              </tr>
            </thead>
            <tbody>
              <% handler_message.attempts.each do |attempt| %>
                <tr>
                  <td><%= attempt.id %></td>
                  <td><%= attempt.started_at %></td>
                  <td><%= attempt.ended_at %></td>
                  <td><%= attempt.successful %></td>
                  <td><%= attempt.return_value %></td>
                  <td><%= attempt.error_class_name %></td>
                  <td><%= attempt.error_message %></td>
                  <!-- <td><%= attempt.error_backtrace&.join("\n") %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
